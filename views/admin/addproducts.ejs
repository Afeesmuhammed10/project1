    <form id="product-form" action="/admin/products/add-product" method="POST">
      <label for="productName">Product Name:</label>
      <input type="text" id="productName" name="productName" value required>

      <!-- gender -->

      <label for="gender">Gender:</label>
      <select id="gender" name="gender" required>
        <option value>Select a category</option>
        <option value="male" id="male">Male</option>
        <option value="female">Female</option>
        <option value="kids">Kids</option>
      </select>

      <!-- category -->

      <label for="category">Category:</label>
      <select id="category" name="category" required>
        <option value>Select a category</option>
        <% if (categories) { %>
        <% categories.forEach((category) => { %>
        <option value="<%= category._id %>"><%= category.categoryname%></option>
        <% }); %>
        <% } %>
      </select>

      <!-- brands -->
      <label for="brands">Brands:</label>
      <select id="brands" name="brands" required>
        <option value>Select a brands</option>
        <% if (brands) { %>
        <% brands.forEach((brands) => { %>
        <option value="<%= brands._id %>"><%= brands.brandname %></option>
        <% }); %>
        <% } %>
      </select>

      <!--  sizes   -->
      



      <!-- description -->

      <label for="description">Description:</label>
      <textarea id="description" name="description" rows="4"
        cols="50"></textarea>

      <!-- Button for Add Product and View Dress Variants -->
      <button type="submit" onclick="sendpData()" id="addProductBtn"
        data-toggle="modal" data-target="#exampleModal">Add Product </button>

    </form>

    <!-- Modal -->
    <!-- Modal -->
    <div class="modal fade" id="varientModal" tabindex="-1" role="dialog"
      aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>

          </div>
          <div class="modal-body">

            <form action="/admin/products/addproductvarient" method="post"
              enctype="multipart/form-data">

              <!-- color -->
              <label for="color">Color:</label>
              <input type="text" name="color" id="color">

              <input type="text" name="productId" id="productId" value="" hidden>

              <label for="productName"> Price :</label>
              <input type="number" id="productName" name="price" value required>

              <!-- stoke -->

              <label for="stoke">Stoke:</label>
              <input type="number" id="stoke" name="stock"  required>

              <label for="size">Sizes:</label>
              <select id="size" name="size" required>
                <option value>Select a Sizes</option>
                <option value="XXS">XXS</option>
                <option value="XS">XS</option>
                <option value="M">M</option>
                <option value="L">L</option>
                <option value="XL">XL</option>
                <option value="XXL">XXL</option>
                <option value="XXXL">XXXL</option>
                <option value="4XL">4XL</option>
                <option value="5XL">5XL</option>
              </select>

              <!-- Images -->
              <div class="form-group">
                <label for="image1">Image 1:</label>
                <input type="file" class="form-control" id="image1"
                  name="image1" accept="image/*"
                  onchange="previewImage(event, 'imagePreview1')">
                <img id="imagePreview1" class="img-preview" src
                  alt="Image Preview 1">
              </div>
              <div class="form-group">
                <label for="image2">Image 2:</label>
                <input type="file" class="form-control" id="image2"
                  name="image2" accept="image/*"
                  onchange="previewImage(event, 'imagePreview2')">
                <img id="imagePreview2" class="img-preview" src
                  alt="Image Preview 2">
              </div>
              <div class="form-group">
                <label for="image3">Image 3:</label>
                <input type="file" class="form-control" id="image3"
                  name="image3" accept="image/*"
                  onchange="previewImage(event, 'imagePreview3')">
                <img id="imagePreview3" class="img-preview" src
                  alt="Image Preview 3">
              </div>

              <div class="modal-footer">

                <button type="submit" aria-label="Close"
                  class="btn btn-primary">Add Varient</button>

              </div>

            </form>
          </div>
        </div>

        <script>
    let form = document.getElementById('product-form');
    form.addEventListener('submit',(e)=>{
      e.preventDefault();
    });

    
    function sendpData(){
      let pname = document.getElementById('productName').value
    let gender = document.getElementById('gender').value
    let category = document.getElementById('category').value
    let brand = document.getElementById('brands').value
    let size = document.getElementById('size').value
    let disc = document.getElementById('description').value


    const obj = {
      pname:pname,
      gender:gender,
      category:category,
      brand:brand,
      size:size,
      disc:disc
    }

    let productJson = JSON.stringify(obj)
      axios.post(`/admin/products/addproducts/?data=${productJson}`).then((response)=>{
            if(response.status===200){
              document.getElementById('varientModal')
              $('#varientModal').modal('show');
              document.getElementById("productId").value = response.data
            }
      })
    }

    function previewImage(event, previewId) {
      const reader = new FileReader();
      reader.onload = function() {
        const output = document.getElementById(previewId);
        output.src = reader.result;
        output.style.display = 'block';
      };
      reader.readAsDataURL(event.target.files[0]);
    }
   
  </script>

