  <script>
    let form = document.getElementById('product-form');
    form.addEventListener('submit',(e)=>{
      e.preventDefault();
    });

    
    function sendpData(){
      let pname = document.getElementById('productName').value
    let gender = document.getElementById('gender').value
    let category = document.getElementById('category').value
    let brand = document.getElementById('brands').value
    let size = document.getElementById('size').value
    let disc = document.getElementById('description').value


    const obj = {
      pname:pname,
      gender:gender,
      category:category,
      brand:brand,
      size:size,
      disc:disc
    }

    let productJson = JSON.stringify(obj)
      axios.post(`/admin/products/addproducts/?data=${productJson}`).then((response)=>{
            if(response.status===200){
              document.getElementById('varientModal')
              $('#varientModal').modal('show');
            }
      })
    }
   
  </script>

