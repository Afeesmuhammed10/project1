<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://cdn.jsdelivr.net/npm/axios@1.6.7/dist/axios.min.js"></script>


<script>
  function deleteSize(sizeId){
 
    let row = document.getElementById(sizeId)
    row.addEventListener('click',(e)=>{
      Swal.fire({
          title: "Delete this sizes ?",
          icon: "warning",
          showCancelButton: true,
          confirmButtonsize: "#3085d6",
          cancelButtonsize: "#d33",
          confirmButtonText: "Yes, Delete"
        }).then((result) => {
          if (result.isConfirmed) {
            Swal.fire({
              title: "Deleted!",
              text: "Your can restore this",
              icon: "success"
            });
            axios.post(`/admin/products/deletesizes/?sizeId=${sizeId}`).then((response) => {
              if (response.status == 200) {
                  const row = document.getElementById(sizeId);
                  if (row) {
                      row.parentNode.removeChild(row); 
                  }
              }
          });
          
          }
        });
    })
  }
</script>

