<!-- table -->

<div class="col-lg-8 d-flex align-items-stretch main">
  <div class="card w-100">
    <div class="card-body p-4 ">
      <div class="button w-100 d-flex  justify-content-end">
        <a style="margin-right: 10px; width: 200px;" href="/admin/products/addsizes" class="btn btn-primary">Add sizes</a>
        <a style="width: 200px;" href="/admin/deletedcategories" class="btn btn-danger">Deleted Categories</a>
    </div>
      <h5 class="card-title fw-semibold mb-4" id="table">Active Category list</h5>
      <div class="table-responsive" id="table">
        <table id="p-table" class="table text-nowrap mb-0 align-middle table-bordered" style="border:1px solid black; text-align:center">
          <thead class="text-dark fs-4">
            <tr>
              <th class="border-bottom-0">
                <h6 class="fw-semibold mb-0">Index</h6>
              </th>
              <th class="border-bottom-0">
                <h6 class="fw-semibold mb-0">size</h6>
              </th>
             
              <th class="border-bottom-0">
                <h6 class="fw-semibold mb-0">Actions</h6>
              </th>
             
            </tr>
          </thead>
          <tbody id="tbody">
            <% if(sizes){ %>
              <% sizes.forEach((size,index) => { %>
                <tr id="<%= size._id %>">
                  <td class="border-bottom-0"><%= index +1 %></td>
                  <td class="border-bottom-0"><%= size.sizeName %></td>
                  
                  <td class="border-bottom-0">
                    <button onclick="editColor('<%= size._id %>')" class="badge bg-primary rounded-3 fw-semibold">Edit</button>
                    <button onclick="deleteSize('<%= size._id %>')" class="badge bg-danger rounded-3 fw-semibold">Delete</button>
                  </td>
                </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
